<h1>Welcome <%= @user.first_name %> to your profile!</h1>

<%= link_to "Edit your profile details", edit_user_registration_path(@user) %>

<div>
  <h3>Your ticket listings</h3>

  <% @my_tickets.each do |listing| %>
    <%= listing.event[:name] %>
    <%= listing.event[:date] %>
    <%= link_to "Edit this listing", edit_ticket_path(listing) %>
    <%= link_to "Remove this listing", ticket_path(listing),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
</div>
